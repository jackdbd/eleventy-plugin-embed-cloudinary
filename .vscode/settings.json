{
  "editor.formatOnSave": false,
  // so VS code does not highlights JSON comments as errors (comments are useful
  // in the configuration for API extractor).
  // https://api-extractor.com/pages/setup/invoking/
  "files.associations": { "*.json": "jsonc" },
  "files.exclude": {
    "**/node_modules/": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.suggestOnTriggerCharacters": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // https://github.com/prettier/prettier-vscode#prettierconfigpath
  "prettier.configPath": ".prettierrc.js",
  "prettier.requireConfig": true
}
