{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",
  // https://api-extractor.com/pages/configs/api-extractor_json/
  // https://github.com/microsoft/rushstack/blob/master/apps/api-extractor/src/schemas/api-extractor-defaults.json
  "apiReport": {
    "enabled": true,
    "reportFolder": "<projectFolder>/.ae/",
    "reportTempFolder": "<projectFolder>/.ae/temp/"
  },
  "bundledPackages": [],
  "compiler": {},
  "docModel": {
    "enabled": true,
    "apiJsonFilePath": "<projectFolder>/.ae/doc/<unscopedPackageName>.api.json"
  },
  "dtsRollup": {
    "enabled": true,
    "betaTrimmedFilePath": "<projectFolder>/dist/<unscopedPackageName>-beta.d.ts",
    "publicTrimmedFilePath": "<projectFolder>/dist/<unscopedPackageName>.d.ts",
    "untrimmedFilePath": "<projectFolder>/dist/<unscopedPackageName>-private.d.ts"
  },
  "mainEntryPointFilePath": "<projectFolder>/dist/api-extractor.d.ts",
  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },
    "extractorMessageReporting": {
      "ae-forgotten-export": {
        "logLevel": "warning",
        "addToApiReportFile": false
      }
    }
  },
  "tsdocMetadata": {
    "enabled": true,
    "tsdocMetadataFilePath": "<projectFolder>/.ae/tsdoc-metadata.json"
  }
}
